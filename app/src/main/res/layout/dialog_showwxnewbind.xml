<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/layout_black_list"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            android:gravity="center_vertical"
            android:text="  我的微信"
            android:textColor="#ffffff"
            android:textSize="20dp" />          <!--标题-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/dialog_showwxnewbind_addaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@mipmap/icon_add3x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dialog_showwxnewbind_addaccount"
                android:layout_marginLeft="10dp"
                android:text="添加绑定微信账号"
                android:textColor="@color/iconblue"
                android:textSize="20dp" />


        </RelativeLayout>    <!--my wx-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#dcdcdc" />          <!--line-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y25"
            android:layout_marginTop="@dimen/y35"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_bindwxok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:background="#000000"
                android:text="@string/ok"
                android:textSize="@dimen/y33" />

            <Button
                android:id="@+id/btn_bindwxcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="#000000"
                android:text="@string/cancel"
                android:textSize="@dimen/y33" />

        </LinearLayout>      <!--button-->


    </LinearLayout>



</RelativeLayout>
