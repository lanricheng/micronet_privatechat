<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lay_userinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/y30">

        <ImageView
            android:id="@+id/imv_myicon"
            android:layout_width="@dimen/y150"
            android:layout_height="@dimen/y150"
            android:paddingRight="@dimen/y15"
            android:paddingLeft="@dimen/y15"
            android:paddingTop="@dimen/y5"
            android:paddingBottom="@dimen/y5"
            android:src="@mipmap/mini_avatar_shadow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/y35"
                android:textColor="@color/black"
                android:text="昵称"/>

         <TextView
                android:id="@+id/tv_myid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:textSize="@dimen/y35"
                android:textColor="@color/black"
                android:visibility="invisible"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/imv_core"
            android:layout_width="@dimen/y80"
            android:layout_height="@dimen/y80"
            android:layout_weight="0.1"
            android:layout_marginRight="@dimen/y25"
            android:src="@mipmap/qrcore"/>

    </LinearLayout>

</LinearLayout>
