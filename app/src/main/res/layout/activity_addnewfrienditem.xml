<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_friendicon"
            android:layout_width="@dimen/y85"
            android:layout_height="@dimen/y85"
            android:src="@mipmap/mini_avatar_shadow"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/y15"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="0.7"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center|right">

                <TextView
                    android:id="@+id/tv_agreeold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:padding="@dimen/y5"
                    android:layout_marginRight="@dimen/y15"
                    android:text="@string/added"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_agreenow"
                    android:layout_width="@dimen/y90"
                    android:layout_height="@dimen/y70"
                    android:layout_marginRight="@dimen/y15"
                    android:layout_marginLeft="@dimen/y15"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="@string/agree"
                    android:padding="@dimen/y5"
                    android:textColor="@color/white"
                    android:background="@color/bg_green"/>

        </RelativeLayout>



</LinearLayout>
